{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "vrc 公式サイト日本語化アドオン",
  "version": "1.2",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://vrchat.com/*"],
    "js": ["script.js"]
  }],
  "options_page": "options.html",
  "permissions": ["storage", "unlimitedStorage"],
  "host_permissions": ["<all_urls>"]
}
